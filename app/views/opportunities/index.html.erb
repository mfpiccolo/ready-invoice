<h1>Listing opportunities</h1>

<table class="table table-bordered table-hover table-condensed">
  <tr>
    <th>Actions</th>
    <th>Opportunity Name</th>
    <th>Amount</th>
    <th>Close Date</th>
    <th>Stage Name</th>
  </tr>

<% @opportunities.each do |opportunity| %>
  <tr class="<%= (opportunity.StageName == 'Closed Won') ? "success" : "warning"%> ">
    <td><%= link_to 'Show', opportunity %> <%= link_to 'Edit', edit_opportunity_path(opportunity) %> <%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= opportunity.Name %></td>
    <td><%= opportunity.Amount %></td>
    <td><%= opportunity.CloseDate %></td>
    <td><%= opportunity.StageName %></td>
  </tr>
<% end %>
</table>

<br />

